.list-title
	color $accent-color
	font 18px $Bold
	margin-bottom 30px
	a
		color inherit
		border-bottom 1.5px solid
		&:hover
			color $text-color
			border-color $text-color
			
.content
	font-size 14px
	p
		margin-bottom 15px
		&:last-child
			margin-bottom 0

