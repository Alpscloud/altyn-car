.nav

	&__item
		display inline-block
		margin-right 50px
		position relative
		&:last-child
			margin-right 0
			
		&.has-sublist
			
		
			&:hover
				> .nav__link
					color $accent-color
					
				.nav-sublist
					opacity 1
					visibility visible
					margin-top 30px
					
		.arrow
			display none
	&__link
		color $text-color
		text-transform uppercase

		&:hover
			color $accent-color
			// font-family $Semibold
				
	&-sublist
		position absolute
		top 100%
		horisontal-center()
		background-color $basic-white-color
		width 210px
		box-shadow 0px 4px 14px rgba($basic-black-color, 0.08)
		br(0,0,10px,10px)
		text-align center
		padding 30px 15px 40px 15px
		margin-top 40px
		opacity 0
		visibility hidden
		transition all .17s ease-in-out
		&:before
			pseudo()
			position absolute
			bottom 100%
			width 100%
			height 30px
			left 0
			
		&__item
			display block
			margin-bottom 20px
			&:last-child
				margin-bottom 0
				
		&__link
			border-bottom 1px solid transparent
			color $basic-black-color
			font-size 15px
			display inline-block
			position relative
			z-index 1
			&:hover
				border-color $basic-black-color
			&.is-active
				color $accent-color
				&:hover
					border-color $accent-color
					

.footer-menu
	margin-top 30px
	ul

				
		a
			color $basic-black-color
			font-size 14px
			line-height 37px
			border-bottom 1px solid transparent
			&:hover
				color $accent-color
				border-color $accent-color
	
