.btn
	display inline-block
	padding 16px 80px
	font 16px $Semibold
	line-height 1
	text-align center
	text-transform uppercase
	color $text-color
	transition all .17s ease-in-out
	backface-visibility hidden
	background-color $accent-color
	color $basic-white-color
	border 1px solid transparent
	border-radius 6px
	b, strong, span
		font-family $Bold
	&:hover
		background-color $dark-accent-color
		box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
		
	&-light
		background-color rgba($basic-white-color, .8)
		color $accent-color
		border-color $accent-color
		&:hover
			border-color transparent
			background-color $basic-white-color
			box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
			
		&-sm
			font-size 13px
			padding 8px
	
	&-wide
		padding-left 10px
		padding-right 10px
		width 100%	
		&-lg
			padding-left 120px
			padding-right 120px
		
	&-short
		padding-left 37.5px
		padding-right 37.5px
		
	&-faded
		background-color rgba($basic-white-color, .6)
		border 1px solid #cdcdcd
		color #cdcdcd
		&:hover
			background-color transparent
			color $accent-color
			border-color $accent-color

		
	
	&__arrow
		display inline-block
		width 32px
		height 69px
		svg
			svg()
			fill $btn-arrow-color
		
		&:hover
			svg
				fill $accent-color
		&--sm
			width 15px
			height 33px		
		&--light
			box-shadow 0px 4px 4px rgba($basic-black-color, 0.16)
			svg
				fill $light-color
				
	&__toggle-filter
		box-shadow 0px 0px 20px rgba($basic-black-color, 0.15)
		background-color $accent-color
		padding 15px 50px 15px 25px
		br(0,10px,10px,0)
		position fixed
		left 0
		top 135px
		font 14px $Med
		color $basic-white-color
		display none
		z-index 10
		&.is-active
			display block
		
		&:after
			pseudo()
			position absolute
			right 14px
			vertical-center()
			width 24px
			height 24px
			background url('../img/icons/svg/filter-ic.svg') 50% 50% no-repeat / 24px 24px
		&:hover
			background-color $dark-accent-color
			box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
			
	&__close
		display inline-block
		width 16px
		height 16px
		svg
			svg()
			fill #1A051D
		&:hover
			svg
				fill $accent-color
				
	&__reset
		text-transform uppercase
		font-family $Semibold
		color #A5A5A5
		&:hover
			color $accent-color
				
	&__search
		display inline-block
		width 20px
		height 20px
		svg
			svg()
			fill $grey-text-color
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
			
		&--absolute
			position absolute
			vertical-center()
			left 15px
			
	
		
		
	&__tab
		width 100%
		max-width 330px
		text-align center
		padding 16px 10px
		background-color $basic-white-color
		color $accent-color
		text-transform uppercase
		font 16px $Semibold
		border 1px solid $accent-color
		&.is-active
			background-color $accent-color
			color $basic-white-color
		&:hover
			box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
		&:first-child
			br(6px, 0, 0, 6px)
		&:last-child
			br(0, 6px, 6px, 0)
	

	&__hamburger
		display none
		flex none
		width 35px
		height 25px
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&--line
			width 35px
			height 3px
			background-color $basic-black-color
			display block
			transition all 0.3s ease-in-out	
			border-radius 30px
			position absolute
			&:nth-child(1)
				top 0
				left 0
			&:nth-child(2)
				position-center()
			&:nth-child(3)
				bottom 0
				left 0
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(11px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-11px) rotate(-45deg)
		