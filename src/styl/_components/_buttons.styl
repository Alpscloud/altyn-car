.btn
	display inline-block
	padding 16px 80px
	font 16px $Semibold
	line-height 1
	text-align center
	text-transform uppercase
	color $text-color
	transition all .17s ease-in-out
	backface-visibility hidden
	background-color $accent-color
	color $basic-white-color
	border 1px solid transparent
	border-radius 6px
	&:hover
		background-color $dark-accent-color
		box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
		
	&-light
		background-color rgba($basic-white-color, .8)
		color $accent-color
		border-color $accent-color
		&:hover
			border-color transparent
			background-color $basic-white-color
			box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
	
	&-wide
		padding-left 15px
		padding-right 15px
		width 100%	
		
	&-faded
		background-color rgba($basic-white-color, .6)
		border 1px solid #cdcdcd
		color #cdcdcd
		&:hover
			background-color transparent
			color $accent-color
			border-color $accent-color

		
	
	&__arrow
		display inline-block
		width 17px
		height 37px
		svg
			svg()
			fill $btn-arrow-color
		&:hover
			svg
				fill $accent-color
		&--sm
			width 15px
			height 33px		
		&--light
			box-shadow 0px 4px 4px rgba($basic-black-color, 0.16)
			svg
				fill $light-color
				
	&__search
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
		
	
	

	&__hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		border-radius 50%
		background-color $accent-color
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&--line
			width 27px
			height 2px
			background-color $basic-black-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
		