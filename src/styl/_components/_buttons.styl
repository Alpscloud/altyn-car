.btn
	display inline-block
	padding 16px 80px
	font 16px $Semibold
	line-height 1
	text-align center
	text-transform uppercase
	color $text-color
	transition all .17s ease-in-out
	backface-visibility hidden
	background-color $accent-color
	color $basic-white-color
	border 1px solid transparent
	border-radius 6px
	b, strong, span
		font-family $Bold
	&:hover
		background-color $dark-accent-color
		box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
		
	&-light
		background-color rgba($basic-white-color, .8)
		color $accent-color
		border-color $accent-color
		&:hover
			border-color transparent
			background-color $basic-white-color
			box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
	
	&-wide
		padding-left 15px
		padding-right 15px
		width 100%	
		
	&-faded
		background-color rgba($basic-white-color, .6)
		border 1px solid #cdcdcd
		color #cdcdcd
		&:hover
			background-color transparent
			color $accent-color
			border-color $accent-color

		
	
	&__arrow
		display inline-block
		width 17px
		height 37px
		svg
			svg()
			fill $btn-arrow-color
		&:hover
			svg
				fill $accent-color
		&--sm
			width 15px
			height 33px		
		&--light
			box-shadow 0px 4px 4px rgba($basic-black-color, 0.16)
			svg
				fill $light-color
				
	&__toggle
		box-shadow 0px 0px 20px rgba($basic-black-color, 0.15)
		background-color $accent-color
		padding 15px 50px 15px 25px
		br(0,10px,10px,0)
		position absolute
		left -20px
		top 30px
		font 14px $Med
		color $basic-white-color
		display none
		&.is-active
			display block
		
		&:after
			pseudo()
			position absolute
			right 14px
			vertical-center()
			width 24px
			height 24px
			background url('../img/icons/svg/filter-ic.svg') 50% 50% no-repeat / 24px 24px
		&:hover
			background-color $dark-accent-color
			box-shadow 0px 4px 9px rgba($basic-black-color, 0.2)
			
	&__close
		display inline-block
		width 16px
		height 16px
		svg
			svg()
			fill #1A051D
		&:hover
			svg
				fill $accent-color
				
	&__reset
		text-transform uppercase
		font-family $Semibold
		color #A5A5A5
		&:hover
			color $accent-color
				
	&__search
		display inline-block
		width 20px
		height 20px
		svg
			svg()
			fill $grey-text-color
		&::-ms-clear
			display none 
			width 0
			height 0
		&::-ms-reveal
			display none 
			width 0
			height 0
		
		&::-webkit-search-decoration,
		&::-webkit-search-cancel-button,
		&::-webkit-search-results-button,
		&::-webkit-search-results-decoration
			display none
			
		&--absolute
			position absolute
			vertical-center()
			left 15px
			
	
		
		
	
	

	&__hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		border-radius 50%
		background-color $accent-color
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&--line
			width 27px
			height 2px
			background-color $basic-black-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
		