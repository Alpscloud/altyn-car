.form-group__input--wrapper
	
	.selectize-input
		border none
		box-shadow none
		outline none
		padding 0
		background-color transparent
		position absolute
		left 0
		top 0
		width 100%
		height 100%
		border-radius 6px
		padding 22px 15px 10px
		> input
			color #393939
			font 14px $Reg
			width 100% !important
			display block
			&::-webkit-input-placeholder
				font 14px $Reg
				color $text-color
			&::-moz-placeholder
				font 14px $Reg
				color $text-color
			&:-moz-placeholder
				font 14px $Reg
				color $text-color
			&:-ms-input-placeholder
				font 14px $Reg
				color $text-color
		&.input-active
			background-color transparent !important
			border none !important
			
			~ .selectize-dropdown
				margin-top 1px
				opacity 1
				visibility visible
				pointer-events auto
				
		&:before
			display none
			

					
	.selectize-control
		&.single
			.selectize-input
				&:after
					display none
					
		&.multi
			padding-right 45px
			// overflow hidden
			.selectize-input
				&.has-items
					display flex
					flex-wrap nowrap
					align-items flex-end
					padding 0 15px 7px 15px
					overflow hidden
					text-overflow ellipsis
					.item
						margin-bottom 0
						margin-right 4px
						white-space nowrap
						padding 3px
						font-size 12px
						text-align center
						border-radius 2
						height 20px
						background-color #f5fafd
						&:last-child
							margin-right 0
					
					
	.selectize-dropdown
		width auto !important
		left 0px !important
		right 0 !important
		box-sizing border-box
		background-color $basic-white-color
		max-height 250px
		overflow-y auto
		z-index 7
		box-shadow 0 4px 14px rgba(0,0,0,.08)
		br(0, 0, 10px, 10px)
		padding 30px 15px 40px
		transition all .17s ease-in-out
		margin-top 21px
		opacity 0
		visibility hidden
		pointer-events none
		display block !important
		border none 
		&-content
			max-height none
	.option
		padding 5px
		
		display block
		margin-bottom 5px
		cursor pointer
		transition all .17s ease-in-out
		
		&:last-child
			margin-bottom 0
		&:hover
			border-color $text-color
			
.car-card__slider--slide
	padding-top 0
	height 320px
			
@media only screen and (max-width: 700px)
	.btn__toggle-filter
		z-index 1 !important
		
@media only screen and (max-width: 550px)
	.car-card__slider--slide
		height auto