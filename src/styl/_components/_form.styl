input[type="search"]
	appearance none
	-webkit-appearance none			

input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
	appearance none
	-webkit-appearance none
	backface-visibility hidden
	transform translate3d(0,0,0)




.form
	&-group
		&__submit
			display flex
			align-items center
			flex-direction column
			margin-top 40px
			.btn__reset
				margin-top 15px
		&__notice
			color $light-text-color
			margin-bottom 20px
			a
				color $alternate-text-color
				border-bottom 1px solid
				&:hover
					color $accent-color
		&__title
			color $alternate-text-color
			font 16px $Semibold
			line-height 19px
			margin-bottom 10px
			width 100%
		&__input
			display block
			width 100%
			background-color $basic-white-color
			border 1px solid transparent
			border-radius 6px
			@extends .box-shadow
			font 14px $Reg
			color $alternate-text-color
			padding 15px
			&:focus,
			&:hover
				border-color $accent-color
				
			&:focus
				+ .arrow
					svg
						fill $accent-color
				
			&::-webkit-input-placeholder
				font 1em $Reg
				color $text-color
			&::-moz-placeholder
				font 1em $Reg
				color $text-color
			&:-moz-placeholder
				font 1em $Reg
				color $text-color
			&:-ms-input-placeholder
				font 1em $Reg
				color $text-color
				
			&.is-error
				border-color red
				
			&.is-disabled,
			&:disabled
				pointer-events none
				
				+ .arrow
					display none
					
				&::-webkit-input-placeholder
					color $grey-text-color
				&::-moz-placeholder
					color $grey-text-color
				&:-moz-placeholder
					color $grey-text-color
				&:-ms-input-placeholder
					color $grey-text-color
				
			&--wrapper
				position relative
				text-align left
				.arrow
					position absolute
					vertical-center()
					right 15px
					pointer-events none
					
			&--search
				padding-left 45px
				&::-webkit-input-placeholder
					font 15px $Reg
					color $grey-text-color
				&::-moz-placeholder
					font 15px $Reg
					color $grey-text-color
				&:-moz-placeholder
					font 15px $Reg
					color $grey-text-color
				&:-ms-input-placeholder
					font 15px $Reg
					color $grey-text-color
					
				&_notice
					margin-top 15px
					color $light-text-color
					font-size 10px
					
			&--price
				padding-left 65px
				font-family $Semibold
				&_mark
					position absolute
					left 15px
					vertical-center()
					pointer-events none
					z-index 1
					font 12px $Reg
					color $alternate-text-color
				
				&_sm-gutter
					padding-left 30px
				
		&__select
			display block
			width 100%
			padding-right 25px
			&-capacity
				padding-left 110px
					
		&__inputs--row
			margin-left -7.5px
			margin-right -7.5px
			.form-group__input--wrapper
				flex 1
				max-width 350px
				padding 0 7.5px
				
		&__price-range
			height 4px
			background-color #ECEBED
			border-radius 2px
			border none
			box-shadow none
			
			.noUi
				&-connect
					background-color $accent-color
				&-handle
					border 2px solid $basic-white-color
					border-radius 50%
					width 32px
					height 32px
					background-color $accent-color
					box-shadow none
					top -14px
					right -16px
					&:focus,
					&:hover
						outline none
					&:before,
					&:after
						display none
			&--wrapper
				width 100%
				padding 0 20px
				margin-top 30px
				&.no-bottom-gutter
					margin-bottom 0 
	

	


.form-group__checkbox,
.form-group__radio
	position relative
	display inline-block
	margin-left 0
	padding-left 40px
	font 1em $Reg
	line-height 1
	color $basic-black-color
	&:before,
	&:after
		pseudo()
		transition all .17s ease-in-out
		position absolute
		left 0
		vertical-center()
			
	&--label
		cursor pointer
		display inline-block
		input
			display none

.form-group__checkbox
	&:before
		border-radius 4px
		width 30px
		height 30px
		border 1px solid #E5E5E5
		background-color $basic-white-color
		background-position 50% 50%
		background-repeat no-repeat
		background-size 18px 18px
		box-shadow 0px 7px 64px rgba(0, 0, 0, 0.07)
		border-radius 6px
	
	&--label
		input
			&:checked 
				+ span
					&:before
						border-color $accent-color
						background-image url('../img/icons/svg/checkbox-ic.svg')
			
.form-group__radio
	&:before
	&:after
		border-radius 50%
	&:before
		width 18px
		height 18px
		border 1px solid $accent-color
		background-color $transparent
	&:after
		width 12px
		height 12px
		background-color $light-color
		left 3px
		top 8px
		opacity 0
		
	&--label
		input
			&:checked 
				+ span
					&:before
						border-color $dark-color
						background-color $dark-color
					&:after
						opacity 1


