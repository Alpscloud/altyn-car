	margin-top 45px
	
	.form-group__input--wrapper
		margin-bottom 15px
		

	
	.form-group__title
		padding-left 5px
		padding-right 5px

			
	&__btns
		margin-top 40px
		.btn
			margin-bottom 15px
			&:last-child
