.user-city
	&__popup
		position fixed
		top 0
		right 0
		z-index 12
		background-color $basic-white-color
		br(0,0,6px,6px)
		box-shadow 0px 0 4px rgba($basic-black-color, 0.08)
		
		text-align center
		padding 45px 35px 30px 35px
		
		&--text
			font 18px $Heavy
			margin-bottom 30px
			b, strong, span
				color $accent-color
				
		&--btns
			.btn
				width auto
				padding-left 25px
				padding-right 25px
				min-width 110px
				margin-right 4px
				&:last-child
					margin-right 0