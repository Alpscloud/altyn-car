.popup 
	position fixed
	position-center()
	z-index 90
	width 100%
	height 100%
	display none
	&__overflow
		position absolute
		left 0
		top 0
		width 100%
		backface-visibility hidden
		-webkit-backface-visibility hidden
		height 100%
		overflow auto
		box-sizing border-box
		-webkit-overflow-scrolling touch
		z-index 105
		background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
		padding 10px
		text-align center
		white-space nowrap
		&:before
			pseudo()
			vertical-align middle
			width 0
			height 100%
	&__body
		width 100%
		max-width 1170px
		background-color $popup-body-bg
		padding 80px 30px 50px 30px
		display inline-block
		vertical-align middle
		position relative
		white-space normal
		&--tall
			min-height 675px
		
	&__content
		min-height inherit
		
	&__text
		margin-bottom 35px
		
	.btn__close
		position absolute
		top 35px
		right 35px
		
	&-links
		margin-top 15px
		.link
			display inline-block
			margin-bottom 10px
			&:last-child
				margin-bottom 0
		
.popup-link__wrapper
	margin-top 20px
	
.trade-in-car
	text-align left
	margin-bottom 25px
	margin-top 20px
	.block-title
		margin-bottom 10px
	&__text
		margin-bottom 20px
		
.buy-car-popup
	margin-bottom 25px
	width 100%
	.car-card-mini
		margin 0 auto 15px auto

.crediting-block
	margin-top 35px
	&__car
		margin-bottom 35px
		
	&__price
		color $alternate-text-color
		font 18px $Semibold
		
		.price
			font 22px $Heavy
			color $accent-color
			display inline-block
			margin-left 4px
			margin-top 25px
			
.crediting-form__calculation
	margin-bottom 25px
	.row-inputs
		margin-bottom 10px
		&:last-child
			margin-bottom 0

	.form-group__price-range--wrapper
		margin-top 0
		
.thanks-text
	margin-bottom 35px
	
.popup-callback
	.form-group__submit
		margin-top 40px



