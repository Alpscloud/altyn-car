.price
	color $accent-color
	font 16px $Bold
	position relative
	&:after
		content '\20B8'
		display inline-block
		margin-left 3px
		
	&-lg
		font-size 24px

.car-card
	position relative
	padding-top 25px

	&:hover
		.car-card__body
			box-shadow 0px 0px 20px rgba($basic-black-color, 0.15)
			
	&.is-recommended
		.car-card__body
			border 2px solid $accent-color
	&__body
		// border 2px solid transparent
		position relative
		border-radius 10px
		overflow hidden
		background-color $basic-white-color
		// radius-overflow()
		transition box-shadow .17s ease-in-out
		
	&__labels
		position absolute
		top 1px
		z-index 1
		left 7px

	&__label
		display inline-block
		margin-right 6px
		br(4px, 4px, 0, 0)
		text-align center
		color $basic-white-color
		line-height 1
		font-size 12px
		padding 7px 10px
		&:last-child
			margin-right 0
			
		&--recommended
			background-color $label-recommended-color
		&--new
			background-color $label-new-color
		&--guarantee
			background-color $label-guarantee-color
			
	&__tools
		position absolute
		right 20px
		top 20px
		z-index 4
		
		.link-with-ic
			margin-right 10px
			&:last-child
				margin-right 0
			
	&__information
		padding 20px 30px
	
	&__description
		font 14px $Reg
		color $alternate-text-color
		
	&__title
		color $alternate-text-color
		font 18px $Bold
		line-height 21px
		margin-bottom 10px
		a
			color inherit
			&:hover
				color $accent-color
				
	&__price
		margin-bottom 10px
		

.car-card-mini
	display flex
	justify-content flex-start
	
	width 100%
	max-width 375px
	text-align left
	position relative
	.btn__close
		position absolute
		right 10px
		top 10px
	&__thumbnail
		display block
		width 125px
		flex none
		position relative
		overflow hidden
		radius-overflow()
		br(6px, 0, 0, 6px)
		img
			display block
			position absolute
			position-center()
			width 100%
			height 100%
			object-fit cover
			
	&__content
		padding 20px 45px 20px 30px
		flex 1
		background-color $basic-white-color
		br(0, 6px, 6px, 0)
		display flex
		flex-direction column
		justify-content center
		
	&__price
		margin-bottom 0
		
	&__title
		color $alternate-text-color
		font 16px $Heavy
		line-height 19px
		margin-bottom 3px
		span
			font-family $Med
		a
			color inherit
			&:hover
				color $accent-color