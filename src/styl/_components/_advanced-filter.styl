.adv-filter-form
	&__row
		margin-left -12px
		margin-right -12px
	&__col
		padding 0 12px
		flex 1
		&:first-child
			max-width 404px
		&:nth-child(2)
			padding-top 35px
		&:last-child
			max-width 309px
			.adv-filter-form__block
				padding-top 35px
				

		
	&__block
		border-radius 10px
		background-color $popup-block-bg
		padding 20px 10px
		height 100%
		display flex
		flex-direction column
		justify-content space-between
		
	&__inputs
		flex 1
		
span.btn__search
	pointer-events none