// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1800px)
	// Header
	.header
		padding 20px 0
		&__links
			margin-right 65px
			
		&__contacts--row
			flex-direction column
			align-items flex-end
			
		.phone-link
			margin-left 0
			
	.user-city
		&__wrapper
			margin-bottom 7px
			
	.nav__item
		margin-right 20px


+max-screen(1500px)
	.page-title
		font-size 46px
		
	.sect-title
		font-size 21px
		line-height 25px
		
	.block-title
		font-size 16px
		line-height 19px
		
	.container,
	.page-container
		padding-left 50px
		padding-right 50px
		
	.page-container
		.container
			padding 0 !important
			
	.container
		max-width 100%
		
	.gutters
		padding 70px 0
		
	.gutter
		&-top
			padding-top 70px
		&-bottom
			padding-bottom 70px
			
	.sect-text
		margin-bottom 40px
	
	.btn
		padding-left 46px
		padding-right 46px
		&-wide
			padding-left 10px
			padding-right 10px
	// Header
	.nav__link
		font-size 12px
		
	.header
		padding-left 20px
		padding-right 20px
		.page-container
			padding 0
		&__links
			.link-with-ic
				font-size 12px
				margin-right 18px
				
	.user-city__popup
		&--body
			padding 45px 20px 25px 20px
		&--btns
			.btn
				font-size 12px
		&--text
			font-size 14px
			margin-bottom 25px
				
	// Promo
	.promo
		&-slide
			height 415px
		&-slider
			.swiper-slide
				padding-bottom 40px
				
			.slider__pagination
				bottom 70px
				
	// Search
	.search
		&-tabs__controls--btn
			font-size 21px
			
		&-form
			.form-group__input--wrapper_col
				max-width 300px
		
				
	.car-categories 
		.list-title
			margin-bottom 30px
			
		ul
			li
				margin-bottom 10px
				
	// Steps
	.sect__steps
		padding 65px 0 55px
		
	.step
		&__ic
			width 80px
			height 80px
			background-size 50px 50px		
			margin-right 10px
			
		&__count,
		&__title
			font-size 16px
	
	// Sect description
	.description-block__content
		padding-left 25px
		
		.btn
			margin-top 30px
			
	// Car card
		
	.car-card
		&__title
			font-size 16px
			line-height 19px
		&__price
			font-size 14px
			

	// Footer
	.footer-menus
		padding-left 6%

+max-screen(1365px)
	// Header
	.header__links
		margin-right 35px
		
	.header
		.logo
			img
				max-width 150px
				
	.nav
		margin-left 30px
		
+max-screen(1260px)
	// Header
	.btn__hamburger
		display inline-block
		

	.user-city__popup
		width 100%
		height 100%
		position-center()
		display none
		&--overflow
			padding 25px
			display block
			position absolute
			top 0
			left 0
			background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
			&:before
				display inline-block
				
			.btn__close
				display inline-block
				
			.logo
				display inline-block
			
		&--body
			width 100%
			max-width 505px
			display inline-block
			vertical-align middle
			position relative
			z-index 2
			position relative
			white-space normal
			z-index 106
			border-radius 10px
			
			padding 30px
			&_content
				min-height 340px
				flex-col-center()
				

	.user-city__dropdown
		display inline-block
		vertical-align middle
		width 100%
		max-width 505px
		padding 35px 20px 
		
		&--wrapper
			position fixed
			top 0
			left 0
			width 100%
			height 100%
			z-index 90
			margin-top 0
			visibility visible
			transform none
			opacity 1
			display none
			transition none
			

	.header-actions
		position fixed
		top 0
		left 0
		z-index 90
		width 100%
		height 100%
		margin 0
		display flex
		justify-content flex-end
		opacity 0
		visibility hidden
		pointer-events none
		&.is-opened
			opacity 1
			visibility visible
			pointer-events auto
			
			.header-actions__overflow
				display block
				
			.header-actions__row
				transform translateX(0)
				
		.btn__close
			display inline-block
			
		.logo__wrapper
			display block
			width 100%

		&__overflow
			position absolute
			fullSize()
			background-color rgba($popup-overlay-bg, $popup-overlay-opacity)
			display none
			
		&__row
			background-color $basic-white-color
			position absolute
			z-index 2
			width 430px
			height 100%
			padding 25px 20px 50px 20px
			display flex
			justify-content space-between
			overflow-y auto
			
			transition transform .17s ease-in-out
			transform translateX(110%)
			
		&__tools
			width 100%
			
	.nav
		margin 40px 0
		width 100%
		padding-left 60px
		max-width 260px
		&__item
			display block
			margin-right 0
			margin-bottom 50px
			&:last-child
				margin-bottom 0
				
			
		
				
				
			.arrow
				display inline-block
				width 26px
				height 26px
				position absolute
				right 0
				top -2px
				&.is-active
					svg
						fill $accent-color
				svg
					width 10px
					height 7px
					fill #CDCDCD
					position absolute
					position-center()
				
		&__link
			font-size 14px
			
	.nav-sublist
		position relative
		margin 0 !important
		transition none
		padding 20px 0 0 20px
		top auto
		left auto
		width 100%
		opacity 1
		visibility visible
		pointer-events auto
		box-shadow none
		border-radius 0
		background-color transparent
		text-align left
		transform none
		display none
		
		&:before
			display none
		&__link
			font-size 14px
			
		&__item
			margin-bottom 20px
			&:last-child
				margin-bottom 0
	.header__links
		margin-right 0
		width 100%
		margin-bottom 30px
		
	.header__contacts
		width 100%
		&--row
			align-items flex-start
			
			


			
	


+max-screen(1200px)
	body
		font-size 12px
	
	.link
		font-size 14px
		
	.container,
	.page-container
		padding 0 20px
	// Car card
	.car-card
		&__label
			font-size 11px
			
	// Services cards
	.card
		padding 25px 25px 40px 25px
		min-height auto
		&__ic
			margin-bottom 11px
			width 65px
			height 65px
			span
				width 100%
				height 100%
				
		&__title
			font-size 16px
		&__description
			display block
			margin-bottom 5px
			line-height 14px
		.link
			display inline-block

	.service-card
		&__wrapper
			width 50%
			flex 1 0 50% 
			max-width 50%
			&:nth-child(1), 
			&:nth-child(2), 
			&:nth-child(3)
				flex 1 0 50% 
				
		
	.sect-title__row
		justify-content space-between