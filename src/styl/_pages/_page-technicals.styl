.faq
	background-color $basic-white-color
	border-radius 6px
	transition box-shadow .17s ease-in-out
	margin 0 auto 20px auto
	max-width 1170px
	&__question
		padding 18px
		cursor pointer
		
		&--title
			transition color .17s ease-in-out
			font 14px $Semibold
			flex 1
			margin-right 20%
			
		.arrow
			svg
				fill $accent-color
	&:hover
		box-shadow 0px 0px 20px rgba($basic-black-color, 0.15)			
	&.is-toggled
		.faq__question--title
			color $accent-color
		.arrow
			transform rotate(-180deg)
	&:last-child
		margin-bottom 0
		
	&__answer
		padding 18px 18px 35px 18px
		display none
		p
			margin-bottom 10px
			&:last-child
				margin-bottom 0
				
// Page swap
.swap-guide
	margin-top 52.5px
	
	&-step
		&__img
			margin-bottom 25px
			max-height 270px
			img
				display block
				width 100%
				object-fit cover
				
		&__count
			font 24px $Semibold
			margin-bottom 15px
			display block
			
// Page guarantee
.contract-block
	margin 0 auto
	max-width 770px
	text-align center
	p
		font 20px $Semibold
		margin-bottom 30px
		
	.btn
		margin-right 21px
		&:last-child
			margin-right 0
			
.sect__guarantee-cost
	padding 80px 0
	
.guarantee-cost
	&__form--wrapper
		> p
			margin-bottom 30px
			span
				cursor pointer
				text-decoration underline
		
			
	&__results
		.car-card-mini
			margin-bottom 50px
			
// Trade in
.trade-in__block
	margin-bottom 40px
	.block-title
		margin-bottom 10px
		
	&--text
		margin-bottom 20px
		

// Crediting
.crediting-form
	&__title-col
		flex 1
		margin-right 25px
		
	&__car-col
		flex none
		