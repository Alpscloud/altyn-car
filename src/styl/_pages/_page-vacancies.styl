.vacancies
	&-advantages
		margin-bottom 55px
		
.vacancy
	margin-bottom 30px
	padding 55px 40px
	transition box-shadow .17s ease-in-out
	&:hover
		box-shadow 0px 0px 20px rgba($basic-black-color, 0.15)
	&__description
		max-width 900px
		margin-right 25px
		p
			margin-bottom 35px
	&__salary
		max-width 300px
		p
			margin-bottom 5px
			&:last-child
				margin-bottom 0
			
	&:last-child
		margin-bottom 0
		
	&-popup
		width 100%
		&-content
			max-width 735px
			margin 0 auto
		.vacancy__salary
			max-width 100%
			margin 25px 0 45px
			
		&-description
			margin-bottom 45px
			
			p
				margin-bottom 20px
				&:last-child
					margin-bottom 0
		

.resume
	background-color $basic-white-color
	border-radius 6px
	padding-top 65px
	padding-bottom 65px
	&-form
		width 100%
		max-width 1170px
		margin 0 auto
		.form-group__input--wrapper
			max-width 330px
			margin 0 auto
			
		.row-inputs
			margin-bottom 25px