.sect__catalog
	.sect__offer
		margin-left -20px
		margin-right -20px
			
.catalog
	transition transform .12s ease-in-out
	position relative
	
	&.is-toggled
		.aside__col
			transform translateX(-110%)
			
		.catalog-cars
			padding-left 0
			
			.car-card__wrapper
				width 25%
		
				
	&__wrapper
		display flex
		justify-content flex-end
		align-items flex-start
		flex-wrap nowrap
		position relative
	&__content	
		width 100%
		padding-top 50px
		
				
.catalog-tablet-title
	display none	


	
.catalog-cars
	padding-left 490px
	// transition padding-left .17s ease-in-out
	.car-card
		&__wrapper
			width 25%
		&:hover
			.car-card__body
				box-shadow 0 0 17px rgba(0,0,0,.23)
		
.cars
	&__wrapper
		padding 20px 0
		width 100%
		transition width .2s ease-in-out
		

	&__row
		
		.car-card
	
			&__wrapper
				width 33.3333%
				padding 20px 15px
				

.sorting
	&__item
		margin-right 25px
		width 215px
		&:last-child
			margin-right 0
			

.sect__offer
	background-color $basic-white-color
	box-shadow 0px 4px 24px rgba($basic-black-color, 0.09)
	padding-left 85px
	&--wide
		margin-left -20px
		margin-right -20px

	
.offer
	max-width 700px
	position relative
	&__img
		position absolute
		left 100%
		top -15px
		margin-left -105px
		width 655px
		img
			display block
	&__content
		position relative
		z-index 1
	.page-title
		margin-bottom 30px
		
	p
		color $alternate-text-color
		font-size 16px
		line-height 19px
		margin-bottom 40px


.sect__recommended
	padding-bottom 50px
				